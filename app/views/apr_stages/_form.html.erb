<%= form_for(@apr_stage) do |f| %>
  <% if @apr_stage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@apr_stage.errors.count, "error") %> prohibited this apr_stage from being saved:</h2>

      <ul>
      <% @apr_stage.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <input type="hidden" name="apr_stage[financing_id]" value="<%= @apr_stage.financing.id %>">
