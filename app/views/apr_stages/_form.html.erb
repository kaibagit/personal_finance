  </div>
  <div class="field">
    <%= f.label :结束时间 %><br>
    <%= f.date_select :end_date %>
  </div>
  <div class="field">
    <%= f.label :起始金额 %><br>
    <%= @apr_stage.begin_money_yuan %> 元
